   <select id="getOrderDetailsByCustomer" resultType="map" resultMap="detailMap" parameterType="Customer">
      select *
from ORDER_DETAILS OD, orders O, ITEMS I, PRODUCTS P
where OD.order_id  = O.order_id and O.CUSTOMER_ID = 4 and OD.ITEM_ID = I.ITEM_ID and I.PRODUCT_ID = P.PRODUCT_ID
   </select>

